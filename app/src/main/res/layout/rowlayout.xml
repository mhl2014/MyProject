<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/listIcon"
        android:layout_height="50dip"
        android:layout_width="50dip"
        android:padding="6dip"
        android:layout_gravity="center_vertical"
        android:src="@drawable/wifi_signal_normal_temp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        />

    <TextView
        android:id="@+id/listSSID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:paddingTop="6dp"
        android:layout_gravity="center_vertical"
        android:text="dummy SSID"
        android:layout_toRightOf="@+id/listIcon"
        android:layout_toEndOf="@+id/listIcon"
        />

    <TextView
        android:id="@+id/listSecKey"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="6dip"
        android:layout_gravity="center_vertical"
        android:text="dummy security key"
        android:layout_below="@+id/listSSID"
        android:layout_toRightOf="@+id/listIcon"
        android:layout_toEndOf="@+id/listIcon"/>

    <ImageButton
        android:layout_width="64dp"
        android:layout_height="60dp"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        android:src="@drawable/ic_arrow_forward_white_24dp"
        android:id="@+id/buttonShowOnMap"
        android:layout_gravity="center_vertical"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:paddingTop="6dp"/>
</RelativeLayout>
