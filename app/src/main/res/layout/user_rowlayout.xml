<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:id="@+id/imageViewUserPicture"
        android:padding="10dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/textViewUserName"
        android:layout_toRightOf="@+id/imageViewUserPicture"
        android:layout_toEndOf="@+id/imageViewUserPicture"
        android:layout_alignTop="@+id/imageViewUserPicture"
        android:padding="10dp" />

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/textViewUserEmail"
        android:layout_toRightOf="@+id/imageViewUserPicture"
        android:layout_toEndOf="@+id/imageViewUserPicture"
        android:layout_below="@+id/textViewUserName"
        android:padding="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewUserPoints"
        android:layout_toRightOf="@+id/imageViewUserPicture"
        android:layout_toEndOf="@+id/imageViewUserPicture"
        android:padding="10dp"
        android:layout_below="@+id/textViewUserEmail"/>

</RelativeLayout>